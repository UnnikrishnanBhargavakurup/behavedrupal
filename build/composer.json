{
    "name": "behavedrupal",
    "description": "Build system generated by behavedrupal.com for behaviour testing Drupal using behat.",
    "authors": [
        {
            "name": "Unnikrishnan Bhargavakurup",
            "email": "unnikrishnanadoor@gmail.com"
        }
    ],
    "require-dev": {
        "phing/phing":               "~2.0",
        "jakoch/phantomjs-installer": "~2.0",
        "drupal/drupal-extension":   "~3.0",
        "drupal/drupal-driver":      "~1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "secure-http": false
    },
    "scripts": {
      "post-install-cmd": [
        "PhantomInstaller\\Installer::installPhantomJS"
      ],
      "post-update-cmd": [
        "PhantomInstaller\\Installer::installPhantomJS"
      ]
    }
}
